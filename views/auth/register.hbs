<section class="register-form-container">

    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div> 

    {{/if}}
    <form action="/register" method="POST">
        <h3>Register</h3>
        <label>Email</label>
        <input type="email" name="email" value="{{email}}" class="box" id="email">
        <label>Username</label>
        <input type="text" name="username" value="{{username}}" class="box" id="username">
        <label>Password</label>
        <input type="password" name="password" class="box" id="password">
        <label>Confirm Password</label>
        <input type="password" name="repeatPassword" class="box" id="repeatPassword">
        <input type="submit" value="Register" class="btn">
        <p>Have an account ? <a href="/login">Click here</a></p>
    </form>
</section>
